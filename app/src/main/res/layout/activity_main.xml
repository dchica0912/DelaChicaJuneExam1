<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#008080"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <LinearLayout
        android:id="@+id/firstRow"
        android:layout_marginTop="10dp"
        android:layout_width="370dp"
        android:layout_centerHorizontal="true"
        android:layout_height="3dp"
        android:orientation="horizontal"
        android:background="#fff">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/secondRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:layout_below="@id/firstRow"
        android:orientation="horizontal">

        <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Personal Notes"
            android:textAlignment="center"
            android:drawablePadding="10dp"
            android:textColor="#fff"
            android:padding="10dp"
            android:drawableTop="@drawable/a3"
            />
        <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:layout_weight="1"
            android:text="Office Notes"
            android:padding="10dp"
            android:textColor="#fff"
            android:textAlignment="center"
            android:drawableTop="@drawable/a4"
            />
        <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Public Notes"
            android:padding="10dp"
            android:drawablePadding="10dp"
            android:textAlignment="center"
            android:textColor="#fff"
            android:drawableTop="@drawable/a5"
            />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/thirdRow"
        android:layout_width="370dp"
        android:layout_below="@id/secondRow"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_height="3dp"
        android:orientation="horizontal"
        android:background="#fff">

    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/fourthRow"
        android:layout_below="@id/thirdRow"
        android:layout_marginTop="35dp"
        android:layout_height="290dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="164dp"
            android:layout_height="94dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="12dp"
            android:background="#eee8aa"
            android:padding="10dp"
            android:text="Notepad 1 Lorem ipsum dolor sit amet, consectetur adipiscing elit"
            app:layout_constraintEnd_toStartOf="@+id/textView4"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="163dp"
            android:layout_height="65dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:background="#A0522D"
            android:padding="10dp"
            android:text="Attach a photo"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="165dp"
            android:layout_height="191dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:background="#FFFF33"
            android:drawableTop="@drawable/a3"
            android:drawablePadding="80dp"
            android:padding="10dp"
            android:text="Note 2 Lorem Ipsum dolor sit amet"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="164dp"
            android:layout_height="164dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="12dp"
            android:background="#D2691E"
            android:padding="10dp"
            android:text="TextView"
            app:layout_constraintEnd_toStartOf="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />
    </android.support.constraint.ConstraintLayout>
</RelativeLayout>